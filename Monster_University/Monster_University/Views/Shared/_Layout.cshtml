<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Monster University</title>

    <!-- PrimeFaces/PrimeVue (si lo necesitas) -->
    <link href="https://cdn.jsdelivr.net/npm/primevue@3.14.0/resources/primevue.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/primeicons/primeicons.css" rel="stylesheet" />

    <!-- Bootstrap (opcional) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos personalizados -->
    <style>
        .layout-container {
            display: grid;
            grid-template-rows: 65px auto 60px;
            min-height: 100vh;
            width: 100%;
        }

        .layout-north {
            grid-row: 1;
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            padding: 0.5rem 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            z-index: 10;
            position: relative;
        }

        .layout-center {
            grid-row: 2;
            padding: 1rem;
            overflow: auto;
            background-image: url('https://www.bangor.ac.uk/sites/default/files/styles/16x9_1100w/public/2020-05/CB%202018%20May%20%2837%29.jpg?h=41ef3158&amp;itok=zGs3cG5Q');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            position: relative;
        }

            /* Overlay para oscurecer la imagen de fondo */
            .layout-center::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.4);
                z-index: 0;
            }

        /* Contenido sobre el overlay */
        .layout-content {
            position: relative;
            z-index: 1;
            color: white; /* Texto blanco para contraste */
        }

        .layout-south {
            grid-row: 3;
            background-color: rgba(233, 236, 239, 0.9);
            border-top: 1px solid #dee2e6;
            padding: 0.5rem 1rem;
            display: flex;
            align-items: center;
            z-index: 10;
            position: relative;
        }

        .app-header {
            font-size: 1.6rem;
            font-weight: bold;
            color: #2a64c5;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .menu-btn, .user-btn {
            font-weight: bold;
            margin-left: 10px;
        }

        .user-menu {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            width: 100%;
        }

        .nav-item {
            margin-left: 15px;
        }

        .user-info {
            color: #2a64c5;
            font-weight: bold;
            margin-right: 15px;
        }

        /* Ajustes para contenido blanco sobre fondo oscuro */
        .card, .panel, .container {
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            color: #333;
        }

        /* Para mantener algunos elementos con texto blanco */
        .text-white-bg {
            color: white !important;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }
    </style>

    <!-- Renderiza secciones específicas de la vista -->
    @RenderSection("styles", required: false)
    @RenderSection("head", required: false)
</head>
<body>
    <div class="layout-container">
        <!-- ==================================== HEADER ====================================== -->
        <div class="layout-north">
            <!-- TÍTULO -->
            <div class="app-header">MONSTER UNIVERSITY</div>

            <!-- MENÚS -->
            <div class="user-menu">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Usuario autenticado -->
                    <span class="user-info">
                        <i class="pi pi-user me-1"></i>@User.Identity.Name
                    </span>

                    <!-- Dropdown de usuario -->
                    <div class="dropdown nav-item">
                        <button class="btn btn-outline-primary dropdown-toggle menu-btn"
                                type="button"
                                data-bs-toggle="dropdown">
                            <i class="pi pi-user"></i> Menú
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Cambiar contraseña", "CambiarClave", "Account",
                                null, new { @class = "dropdown-item" })
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()"
                                       class="dropdown-item text-danger">
                                        <i class="pi pi-sign-out me-1"></i>Cerrar sesión
                                    </a>
                                }
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <!-- Usuario no autenticado -->
                    @Html.ActionLink("Iniciar Sesión", "Login", "Account",
                    null, new { @class = "btn btn-primary menu-btn" })
                }

                <!-- Menús principales -->
                <div class="nav-item">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle menu-btn"
                                type="button"
                                data-bs-toggle="dropdown">
                            <i class="pi pi-bars"></i> Módulos
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Personal", "Index", "Personal", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Finanzas", "Index", "Finanzas", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Académico", "Index", "Academico", null, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Seguridad", "Index", "Seguridad", null, new { @class = "dropdown-item" })</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- ==================================== CONTENIDO CENTRAL ====================================== -->
        <div class="layout-center">
            <div class="layout-content">
                <!-- Aquí se inyecta el contenido específico de cada vista -->
                @RenderBody()
            </div>
        </div>

        <!-- ==================================== FOOTER ====================================== -->
        <div class="layout-south">
            @RenderSection("footer", required: false)

            @if (IsSectionDefined("footer"))
            {
                @RenderSection("footer")
            }
            else
            {
                <!-- Footer por defecto -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <small class="text-muted">
                                &copy; @DateTime.Now.Year - Monster University - Sistema de Gestión Académica
                            </small>
                        </div>
                        <div class="col text-end">
                            <small class="text-muted">
                                Versión 1.0.0
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- PrimeVue/PrimeFaces JS (si es necesario) -->
    <script src="https://cdn.jsdelivr.net/npm/vue@3.2.0/dist/vue.global.prod.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/primevue@3.14.0/primevue.min.js"></script>

    <!-- Scripts específicos de la vista -->
    @RenderSection("scripts", required: false)
</body>
</html>